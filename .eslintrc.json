{
  "env": {
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 2017
  },
  "extends": "airbnb-base",
  "rules": {
    "strict": "off",
    "no-return-await": "warn",
    "space-before-function-paren": ["error", { "anonymous": "never", "named": "always" }],
    "class-methods-use-this": "off",
    "global-require": "off",
    "no-param-reassign": ["error", { "props": false }],
    "no-await-in-loop": "warn",
    "no-plusplus":"off"
  },
  "globals": {
    "use": true
  }
}
